<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.FragmentsActivity">

    <FrameLayout
        android:id="@+id/container"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <fragment
            android:id="@+id/mainFragment"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:name="com.example.myapplication.fragments.StartBlankFragment"
            />
    </FrameLayout>

    <ImageView
        android:id="@+id/ivLikeBottomNavigation1"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@drawable/ic_baseline_clear_selector"
        app:layout_constraintHorizontal_chainStyle="spread"
        />

    <ImageView
        android:id="@+id/ivLikeBottomNavigation2"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="@id/ivLikeBottomNavigation1"
        app:layout_constraintLeft_toRightOf="@+id/ivLikeBottomNavigation1"
        app:layout_constraintRight_toLeftOf="@+id/ivLikeBottomNavigation3"
        android:src="@drawable/ic_baseline_clear_selector"
        />

    <ImageView
        android:id="@+id/ivLikeBottomNavigation3"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="@id/ivLikeBottomNavigation1"
        app:layout_constraintLeft_toRightOf="@+id/ivLikeBottomNavigation2"
        app:layout_constraintRight_toLeftOf="@id/ivLikeBottomNavigation4"
        android:src="@drawable/ic_baseline_clear_selector"
        />

    <ImageView
        android:id="@+id/ivLikeBottomNavigation4"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="@id/ivLikeBottomNavigation1"
        app:layout_constraintLeft_toRightOf="@+id/ivLikeBottomNavigation3"
        app:layout_constraintRight_toLeftOf="@+id/ivLikeBottomNavigation5"
        android:src="@drawable/ic_baseline_clear_selector"
        />

    <ImageView
        android:id="@+id/ivLikeBottomNavigation5"
        android:layout_width="36dp"
        android:layout_height="36dp"
        app:layout_constraintTop_toTopOf="@id/ivLikeBottomNavigation1"
        app:layout_constraintLeft_toRightOf="@+id/ivLikeBottomNavigation4"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/ic_baseline_clear_selector"
        />

</androidx.constraintlayout.widget.ConstraintLayout>